<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_progress_button_layout"
    android:onClick="navigate"
    android:clickable="true"
    android:focusable="true">
    <android.support.v7.widget.CardView
        android:id="@+id/myprogress_cardview"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginStart="3sp"
        app:cardBackgroundColor="@color/colorButtonFirst"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:duplicateParentState="true">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/myprogress_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp">

            <TextView
                android:id="@+id/my_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="My"
                app:layout_constraintTop_toTopOf="@id/myprogress_text_container"
                app:layout_constraintStart_toStartOf="@id/myprogress_text_container"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Progress"
                app:layout_constraintTop_toBottomOf="@id/my_string"
                app:layout_constraintStart_toStartOf="@id/my_string"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/myprogress_icon_cardview"
        android:layout_width="110sp"
        android:layout_height="50sp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/myprogress_cardview"
        app:layout_constraintStart_toStartOf="@id/myprogress_cardview"
        app:layout_constraintEnd_toEndOf="@id/myprogress_cardview"
        android:duplicateParentState="true">
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_swap_vert_white_24"
            android:tint="@android:color/holo_red_dark"
            android:clickable="false"
            />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>